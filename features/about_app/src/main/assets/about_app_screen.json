{
    "templates": {
        "div-video_card": {
            "type": "container",
            "orientation": "overlap",
            "border": {
                "corner_radius": 16
            },
            "items": [
                {
                    "type": "video",
                    "$visibility": "video_visibility",
                    "autostart": true,
                    "repeatable": true,
                    "widht": {
                        "type": "match_parent"
                    },
                    "aspect": {
                        "ratio": 1
                    },
                    "video_sources": [
                        {
                            "type": "video_source",
                            "mime_type": "video/mp4",
                            "resolution": {
                                "type": "resolution",
                                "width": 640,
                                "height": 480
                            },
                            "bitrate": 2500,
                            "url": "https://kstatic.googleusercontent.com/files/a6e62c0268cf2ac32c18089d0f031beff068d4b0860d61e70f2bf8f725fc4eb0950e63a7b39ad5aa0d6985f2848d266fcbe4311b9928058f956c95d17f60f842"
                        }
                    ],
                    "visibility_actions": [
                        {
                            "log_id": "video_appeared_action",
                            "$url": "video_appeared_action"
                        }
                    ],
                    "transition_out": {
                        "type": "slide",
                        "edge": "top",
                        "duration": 300
                    },
                    "transition_in": {
                        "type": "slide",
                        "edge": "left",
                        "duration": 300
                    }
                },
                {
                    "id": "video_text",
                    "type": "text",
                    "$text": "video_text",
                    "$visibility": "text_visibility",
                    "font_size": 24,
                    "alignment_horizontal": "center",
                    "alignment_vertical": "bottom",
                    "font_family": "display",
                    "text_alignment_horizontal": "center",
                    "$text_color": "video_text_color",
                    "font_weight": "bold",
                    "margins": {
                        "bottom": 8
                    },
                    "transition_in": {
                        "type": "slide",
                        "edge": "left",
                        "duration": 300
                    }
                }
            ]
        },
        "div-created-for_card": {
            "type": "container",
            "orientation": "horizontal",
            "content_alignment_vertical": "center",
            "items": [
                {
                    "type": "text",
                    "$text_color": "text_color",
                    "font_size": 18,
                    "ranges": [
                        {
                            "start": 34,
                            "end": 67,
                            "font_weight": "bold"
                        },
                        {
                            "start": 74,
                            "end": 81,
                            "font_weight": "bold"
                        },
                        {
                            "start": 86,
                            "end": 98,
                            "font_weight": "bold"
                        }
                    ],
                    "text": "Проект сделан в рамках обучения в Летней Школе Мобильной Разработки трека Android для Young&Yandex"
                },
                {
                    "type": "image",
                    "width": {
                        "type": "fixed",
                        "value": 32
                    },
                    "image_url": "https://yastatic.net/q/logoaas/v2/Яндекс%E2%80%AF.svg?size=25&color=000&first=white&circle=red",
                    "preview": "data:image/svg+xml;base64,"
                },
                {
                    "type": "image",
                    "width": {
                        "type": "fixed",
                        "value": 32
                    },
                    "image_url": "https://avatars.mds.yandex.net/get-lpc/10116223/e2e14ea9-e136-4539-8427-789a1859cfaa/orig",
                    "preview": "data:image/svg+xml;base64,"
                }
            ]
        },
        "div-btn-send_card": {
            "type": "container",
            "id": "btn_send_message",
            "$visibility": "btn_visibility",
            "action": {
                "log_id": "send_action",
                "$url": "btn_action"
            },
            "action_animation": {
                "name": "scale",
                "duration": 200,
                "start_value": 1,
                "end_value": 0.9
            },
            "items": [
                {
                    "type": "text",
                    "text": "Отправить",
                    "text_color": "#fff",
                    "font_size": 16,
                    "font_weight": "bold",
                    "text_alignment_horizontal": "center"
                }
            ],
            "background": [
                {
                    "type": "gradient",

                    "colors": [
                        "#ffb322",
                        "#ff6501",
                        "#5f48e5",
                        "#393602"
                    ]
                }
            ],
            "border": {
                "corner_radius": 8
            },
            "margins": {
                "top": 4,
                "bottom": 4
            },
            "paddings": {
                "top": 16,
                "bottom": 16
            },
            "width":{
                "type": "match_parent"
            },
            "transition_in":{
                "type": "slide",
                "edge": "bottom",
                "start_delay": 200,
                "duration": 400
            }
        },
        "div-slider_card": {
            "id": "rate_slider",
            "$visibility": "slider_visibility",
            "type": "slider",
            "width": {
                "type": "match_parent"
            },
            "max_value": 5,
            "min_value": 1,
            "$thumb_value_variable": "rate_slider_variable",
            "thumb_style": {
                "type": "shape_drawable",
                "color": "#FF6501",
                "shape": {
                    "type": "rounded_rectangle",
                    "item_height": {
                        "type": "fixed",
                        "value": 32
                    },
                    "item_width": {
                        "type": "fixed",
                        "value": 32
                    },
                    "corner_radius": {
                        "type": "fixed",
                        "value": 100
                    }
                }
            },
            "thumb_text_style": {
                "font_size": 12,
                "font_weight": "bold",
                "text_color": "#ffffff"
            },
            "track_active_style": {
                "type": "shape_drawable",
                "color": "#ffb322",
                "shape": {
                    "type": "rounded_rectangle",
                    "item_height": {
                        "type": "fixed",
                        "value": 6
                    }
                }
            },
            "track_inactive_style": {
                "type": "shape_drawable",
                "color": "#5f48e5",
                "shape": {
                    "type": "rounded_rectangle",
                    "item_height": {
                        "type": "fixed",
                        "value": 6
                    }
                }
            },
            "transition_in":{
                "type": "slide",
                "edge": "left",
                "duration": 500,
                "start_delay": 100
            },
            "accessibility": {
                "description": "Поставьте вашу оценку"
            }
        }
    },
    "card": {
        "log_id": "div2_sample_card",
        "variables": [
            {
                "name": "message",
                "type": "string",
                "value": ""
            },
            {
                "name": "is_hint_visible",
                "type": "boolean",
                "value": true
            },
            {
                "type": "integer",
                "name": "rate_variable",
                "value": 5
            },
            {
                "name": "video_text_visibility",
                "type": "string",
                "value": "invisible"
            },
            {
                "name": "stroke_width",
                "type": "integer",
                "value": 1
            },
            {
                "name": "field_was_focused",
                "type": "boolean",
                "value": false
            },
            {
                "name": "is_video_visible",
                "type": "boolean",
                "value": true
            },
            {
                "name": "video_text",
                "type": "string",
                "value": "Created with \nMaterial Design3"
            },
            {
                "name": "light_theme_color",
                "type": "color",
                "value": "#000000"
            },
            {
                "name": "dark_theme_color",
                "type": "color",
                "value": "#ffffff"
            },
            {
                "name": "is_dark_theme",
                "type": "boolean",
                "value": false
            }
        ],
        "states": [
            {
                "state_id": 0,
                "div": {
                    "type": "gallery",
                    "paddings": {
                        "start": 16,
                        "end": 16
                    },
                    "width": {
                        "type": "match_parent"
                    },
                    "height":{
                        "type": "match_parent"
                    },
                    "orientation": "vertical",
                    "items": [
                        {
                            "type": "container",
                            "id": "app_bar",
                            "height":{
                                "type": "fixed",
                                "value": 64
                            },
                            "orientation": "horizontal",
                            "content_alignment_vertical": "center",
                            "items": [
                                {
                                    "type": "image",
                                    "tint_color": "@{is_dark_theme ? '@{dark_theme_color}' : '@{light_theme_color}'}",
                                    "width": {
                                        "type": "fixed",
                                        "value": 24
                                    },
                                    "image_url": "https://www.svgrepo.com/show/324205/back-arrow-navigation.svg",
                                    "preview": "data:image/svg+xml;base64,",
                                    "action": {
                                        "log_id": "navigate_back",
                                        "url": "navigation://navigate-back"
                                    },
                                    "action_animation": {
                                        "name": "scale",
                                        "duration": 200,
                                        "start_value": 1,
                                        "end_value": 0.9
                                    }
                                },
                                {
                                    "type": "text",
                                    "text_color": "@{is_dark_theme ? '@{dark_theme_color}' : '@{light_theme_color}'}",
                                    "margins": {
                                        "start": 16
                                    },
                                    "font_size": 28,
                                    "text": "О приложении"
                                }
                            ]
                        },
                        {
                            "type": "div-video_card",
                            "video_text": "@{video_text}",
                            "video_text_color": "@{is_video_visible ? '#fff' : is_dark_theme ? '@{dark_theme_color}' : '@{light_theme_color}'}",
                            "text_visibility": "@{video_text_visibility}",
                            "video_visibility": "@{is_video_visible ? 'visible' : 'gone'}",
                            "video_appeared_action": "div-action://set_variable?name=video_text_visibility&value=visible"
                        },
                        {
                            "type": "div-created-for_card",
                            "text_color": "@{is_dark_theme ? '@{dark_theme_color}' : '@{light_theme_color}'}"
                        },
                        {
                            "type": "input",
                            "text_variable": "message",
                            "highlight_color": "#ffb322",
                            "margins": {
                                "top": 8
                            },
                            "focus": {
                                "on_focus": [
                                    {
                                        "log_id": "set_focused",
                                        "url": "div-action://set_variable?name=field_was_focused&value=true"
                                    },
                                    {
                                        "log_id": "make_stroke_bold",
                                        "url": "div-action://set_variable?name=stroke_width&value=3"
                                    },
                                    {
                                        "log_id": "hide_hint",
                                        "url": "div-action://set_variable?name=is_hint_visible&value=false"
                                    },
                                    {
                                        "log_id": "hide_video",
                                        "url": "div-action://set_variable?name=is_video_visible&value=false"
                                    },
                                    {
                                        "log_id": "show_author",
                                        "url": "div-action://set_variable?name=video_text&value=Проект выполнил\nГригораш Павел"
                                    }
                                ],
                                "on_blur": [
                                    {
                                        "log_id": "show_button",
                                        "url": "div-action://set_variable?name=stroke_width&value=1"
                                    },
                                    {
                                        "log_id": "show_hint",
                                        "url": "div-action://set_variable?name=is_hint_visible&value=true"
                                    }
                                ]
                            },
                            "font_size": 16,
                            "paddings": {
                                "start": 8,
                                "end": 8,
                                "top": 16,
                                "bottom": 16
                            },
                            "hint_text": "@{is_hint_visible ? 'Ваше мнение о приложении' : ''}",
                            "hint_color": "@{is_dark_theme ? '@{dark_theme_color}' : '@{light_theme_color}'}",
                            "text_color": "@{is_dark_theme ? '@{dark_theme_color}' : '@{light_theme_color}'}",
                            "accessibility": {
                                "description": "Напишите ваше мнение о приложении"
                            },
                            "border": {
                                "corner_radius": 10,
                                "stroke": {
                                    "color": "@{is_dark_theme ? '@{dark_theme_color}' : '@{light_theme_color}'}",
                                    "width": "@{stroke_width}"
                                }
                            }
                        },
                        {
                            "type": "container",
                            "orientation":"vertical",
                            "content_alignment_horizontal": "center",
                            "items": [
                                {
                                    "type": "div-slider_card",
                                    "slider_visibility": "@{field_was_focused ? 'visible' : 'invisible'}",
                                    "rate_slider_variable": "rate_variable",
                                    "margins": {
                                        "top": 16,
                                        "bottom": 16
                                    }
                                },
                                {
                                    "type": "div-btn-send_card",
                                    "btn_visibility": "@{field_was_focused ? 'visible' : 'invisible'}",
                                    "btn_action": "notification://send-to-telegram?text=Это улетит в телегу\nОценка: @{rate_variable}\nТекст сообщения: @{message}"
                                }
                            ]
                        }
                    ]
                }
            }
        ]
    }
}
